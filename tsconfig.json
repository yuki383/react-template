{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react-jsx",
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "images/*": ["public/images/*"]
    }
  }
}
